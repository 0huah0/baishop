      </isNotNull>
      <isNotNull prepend="," property="position" >
        position = #position:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="mobile" >
        mobile = #mobile:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="email" >
        email = #email:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="regTime" >
