<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="RemoteAuths" >
  <resultMap id="resultMap" class="com.baishop.entity.ass.RemoteAuths" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="user" property="user" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="provide" property="provide" jdbcType="VARCHAR" />
    <result column="auths" property="auths" jdbcType="VARCHAR" />
  </resultMap>
  
  <select id="getRemoteAuths" resultMap="resultMap" >
    select id, user, password, provide, auths
    from bai_remote_auths
    <dynamic prepend="where">
		<isNotEmpty prepend="AND" property="id">
			id = #id:INTEGER#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="user">
			user = #user:VARCHAR#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="provide">
			provide = #provide:VARCHAR#
		</isNotEmpty>
		<!-- 网站关键字查询 -->
		<isNotEmpty prepend="and" property="searchKey" close=")" open="(">
			user like CONCAT('%',#searchKey:VARCHAR#,'%') or 
			provide like CONCAT('%',#searchKey:VARCHAR#,'%')
		</isNotEmpty>
	</dynamic>
  </select>
  
  <delete id="delRemoteAuths" >
    delete from bai_remote_auths
    where id in
	<iterate open="(" close=")" conjunction=",">
		#[]:INTEGER# 
	</iterate>
  </delete>
  
  <insert id="addRemoteAuths" parameterClass="com.baishop.entity.ass.RemoteAuths" >
    insert into bai_remote_auths
    <dynamic prepend="(" >
      <isNotNull prepend="," property="user" >
        user
      </isNotNull>
      <isNotNull prepend="," property="password" >
        password
      </isNotNull>
      <isNotNull prepend="," property="provide" >
        provide
      </isNotNull>
      <isNotNull prepend="," property="auths" >
        auths
      </isNotNull>
      )
    </dynamic>
    values
    <dynamic prepend="(" >
      <isNotNull prepend="," property="user" >
        #user:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="password" >
        #password:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="provide" >
        #provide:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="auths" >
        #auths:VARCHAR#
      </isNotNull>
      )
    </dynamic>
    <selectKey resultClass="java.lang.Integer" keyProperty="id" >
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>
  
  <update id="editRemoteAuths" parameterClass="com.baishop.entity.ass.RemoteAuths" >
    update bai_remote_auths
    <dynamic prepend="set" >
      <isNotNull prepend="," property="user" >
        user = #user:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="password" >
        password = #password:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="provide" >
        provide = #provide:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="auths" >
        auths = #auths:VARCHAR#
      </isNotNull>
    </dynamic>
    where id = #id:INTEGER#
  </update>

</sqlMap>